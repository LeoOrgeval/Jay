{% extends 'base.html.twig' %}


{% block content %}

    <!-- 1st page - Cover -->
    <title>Admin</title>
    <div class="bg-cream py-10">
        <div class="font-black text-3xl ml-10">
            <a href="/backoffice"><< Menu</a>
        </div>
        <div class="font-black text-3xl ml-10 mt-10">
            <a href="/backoffice/tag">< Retour</a>
        </div>
        <div class="flex justify-evenly grid-cols-2">
            <div>
                <div class="mt-4 ml-20 font-medium text-xl">
                    Modifier le tag
                </div>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                </div>
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary'} }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- 5th page - Footer -->

{% endblock %}