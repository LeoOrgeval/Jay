{% extends 'base.html.twig' %}


{% block content %}

    <!-- 1st page - Cover -->
    <title>Admin</title>
    <div class="bg-cream py-10">
        <div class="font-black text-3xl ml-10">
            <a href="/backoffice">< Retour</a>
        </div>
        <div class="flex justify-evenly grid-cols-2">
            <div>
                <div class="mt-4 ml-20 font-medium text-xl">
                    Cr√©er un projet:
                </div>
                <div class="mt-2 ml-20">
                    {{ form(card) }}
                </div>
            </div>
            <div>
                <div class="mt-4 ml-20 font-medium text-xl">
                    Liste des projets:
                </div>
                <div class="mt-2 ml-20">
                    <ul>
                        {% for card in cards %}
                            <div class="mt-2 flex">
                                <div class="mr-2">
                                <a href="card/editCard/{{ card.id }}">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                </div>
                                <a href="card/removeCard/{{ card.id }}">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                <li class="ml-2">{{ card.title }}</li>
                            </div>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- 5th page - Footer -->

{% endblock %}